{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Web Context Protocol",
  "colors": {
    "primary": "#2d4dff",
    "light": "#2d4dff",
    "dark": "#2d4dff"
  },
  "favicon": "/favicon.svg",
  "search": {
    "prompt": "Search..."
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "index",
              "quickstart",
              "why-wcp"
            ]
          }
        ]
      },
      {
        "tab": "Specification",
        "groups": [
          {
            "group": "Technical Specification",
            "pages": [
              "concepts/actions",
              "concepts/effects",
              "concepts/regions"
            ]
          }
        ]
      },
      {
        "tab": "Community",
        "groups": [
          {
            "group": "Get Involved",
            "pages": [
              "community"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/webcontextprotocol",
          "icon": "github"
        },
        {
          "anchor": "Registry",
          "href": "https://registry.wcp.dev",
          "icon": "database"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/webcontextprotocol"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "cursor"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/umbrellamode",
      "github": "https://github.com/webcontextprotocol"
    }
  },
  "seo": {
    "indexHiddenPages": false
  },
  "metadata": {
    "og:title": "Web Context Protocol - HTML annotations for AI agents",
    "og:description": "A lightweight standard that enables AI agents to reliably understand and interact with web pages",
    "og:image": "/images/og-image.png",
    "twitter:site": "@sheevammmm"
  }
}